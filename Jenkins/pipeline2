pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/vishruthreddy/K8S.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook(
                    playbook: 'Ansible/apache.yml',          // Ensure this path exists in your Git repo
                    inventory: 'inventory.ini',              // This should be in the repo or workspace
                    credentialsId: 'Ansible',                // This should match your Jenkins SSH credential ID
                    installation: 'Ansible',                 // Name of your Ansible installation in Jenkins tools config
                    disableHostKeyChecking: true
                )
            }
        }
    }
}
