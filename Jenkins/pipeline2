pipeline {
    agent any

    tools {
        kubectl 'kubectl-1.28' // Make sure this matches the name you set in "Global Tool Configuration"
    }

    environment {
        GIT_REPO = 'https://github.com/vishruthreddy/K8S.git'
        BRANCH = 'main'
        FILE_PATH = 'K8S/Ansible/apache.yml'
        KUBECONFIG = '/var/lib/jenkins/.kube/config' // Ensure this file exists and is readable by Jenkins
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: "${BRANCH}", url: "${GIT_REPO}"
            }
        }

        stage('Check kubectl & Cluster Access') {
            steps {
                sh 'kubectl version --client'
                sh 'kubectl config current-context'
                sh 'kubectl get nodes'
            }
        }

        stage('Apply Apache RBAC Configuration') {
            steps {
                script {
                    sh "kubectl apply -f ${FILE_PATH}"
                }
            }
        }
    }

    post {
        success {
            echo "✅ Apache RBAC configuration applied successfully."
        }
        failure {
            echo "❌ Failed to apply Apache RBAC configuration. Please check kubectl setup or kubeconfig."
        }
    }
}
