pipeline {
    agent any

    environment {
        DOCKERHUB_USER = 'vishruth04'
        DOCKER_TAG = 'latest'
        IMAGE_NAME = 'loginwebapp'
        ANSIBLE_INVENTORY = 'inventory.ini'  // Update with your actual inventory file path
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/vishruthreddy/K8S.git'
            }
        }

        stage('Pull Docker Image') {
            steps {
                script {
                    // Pull the Docker image from DockerHub
                    sh "docker pull ${DOCKERHUB_USER}/${IMAGE_NAME}:${DOCKER_TAG}"
                }
            }
        }

        stage('Deploy to Kubernetes using Ansible') {
            steps {
                script {
                    // Run the Ansible playbook to apply the Kubernetes YAML files using the inventory
                    sh """
                        ansible-playbook -i ${ANSIBLE_INVENTORY} k8s/deploy_apache_rbac.yaml
                    """
                }
            }
        }
    }
}
