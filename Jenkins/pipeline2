pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/vishruthreddy/K8S.git'
            }
        }

        stage("Execute Ansible") {
            steps {
                sh '''
                    ansible-playbook Ansible/apache.yml \
                        -i inventory.ini \
                        --private-key ~/.ssh/ansible_id_rsa \
                        -u ubuntu
                '''
            }
        }
    }
}
